<link rel="stylesheet" type="text/css" href="/css/tasks.css">

<div class="container">
    <h3 class="filter-heading">Filter Options:</h3>
    <div class="filter-container">
        <div class="filter-toggle">
            <input type="checkbox" id="nameFilter" name="nameFilter">
            <label for="nameFilter">Name</label>
        </div>
        <div class="filter-toggle">
            <input type="checkbox" id="dueDateFilter" name="dueDateFilter">
            <label for="dueDateFilter">Due Date</label>
        </div>
        <div class="filter-toggle">
            <input type="checkbox" id="creationDateFilter" name="creationDateFilter">
            <label for="creationDateFilter">Creation Date</label>
        </div>
        <div class="filter-toggle">
            <input type="checkbox" id="importanceFilter" name="importanceFilter">
            <label for="importanceFilter">Importance</label>
        </div>
    </div>

    {{#if tasks.length}}
        <h2>All Tasks:</h2>
        <ul>
            {{#each tasks}}
                <li>
                    <div class="task">
                        <span class="task-date">{{this.dueDate}}</span>
                        <span class="task-title">{{this.title}}</span>
                        <span class="task-description">{{this.description}}</span>
                        <span class="task-importance">{{this.importance}}</span>
                        <div class="task-checkbox-label">
                            <input type="checkbox" id="status" name="status">
                            <label for="status">Open</label>
                        </div>
                        <form action="/tasks/{{this.id}}/edit" method="get" class="task-edit-button">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/tasks/{{this.id}}/delete" method="post" class="task-delete-button">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No tasks found.</p>
    {{/if}}
