<link rel="stylesheet" type="text/css" href="/css/tasks.css">

<div class="container">
    <h3 class="filter-heading">Filter Options:</h3>
    <div class="filter-container">
        <div class="filter-toggle">
            <button id="nameFilterButton"
                    class="filter-button {{#if_eq filterNameAscending false}}rotate-arrow{{/if_eq}}"
                    aria-expanded="false">
                Name <span class="arrow-icon">&#x25BC;</span>
            </button>

            <button id="dueDateFilterButton" class="filter-button" aria-expanded="false">
                Due date <span class="arrow-icon">&#x25BC;</span>
            </button>

            <button id="creationDateFilterButton" class="filter-button" aria-expanded="false">
                creation Date <span class="arrow-icon">&#x25BC;</span>
            </button>

            <button id="importanceFilterButton" class="filter-button" aria-expanded="false">
                Importance <span class="arrow-icon">&#x25BC;</span>
            </button>

            <form action="/tasks/completed" method="get">
            <button id="filterButtonCompleted" class="filter-button" aria-expanded="false">
                            Completed <span class="arrow-icon">&#x25BC;</span>
                        </button>
                        </form>

        </div>
    </div>
    {{#if tasks.length}}
        <h2>All Tasks:</h2>
        <form action="/" method="get">
            <button id="newTask" aria-expanded="false">
                     &#x2795; New Task
                 </button>
        </form>

        <ul>
            {{#each tasks}}
                <li>
                    <div class="task">
                        <span class="task-date">{{this.dueDate}}</span>
                        <span class="task-title">{{this.title}}</span>
                        <span class="task-description">{{this.description}}</span>
                        <span class="task-importance">{{this.importance}}</span>
                        <form action="/tasks/{{this._id}}/state" method="post" class="task-checkbox-label">
                            <input type="hidden" name="_method" value="PUT">
                            <input type="checkbox" id="status" name="completed">
                            <label for="status">Open</label>
                        </form>
                        <form action="/tasks/{{this._id}}/edit" method="get" class="task-edit-button">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/tasks/{{this._id}}/delete" method="post" class="task-delete-button">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No tasks found.</p>
    {{/if}}
</div>
